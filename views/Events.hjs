<!DOCTYPE html>
<html>
 	<head>
 		<title>Flock Event {{name}} </title>
	    <link rel="stylesheet" href="/stylesheets/navbar.css">
	    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
	    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
	    <link rel = "stylesheet" href="/stylesheets/events.css">
	    <script type = "text/javascript">
	    	function changeVisibility (elmt,eventId) {
	    		if (document.getElementByClassName('ff').style.display == '') {
	    			document.getElementById('createGroup' + eventId).style.display = 'block';
	    			elmt.checked = true;
	    		}
	    		else {
	    			document.getElementById('createGroup' + eventId).style.display = '';
	    			elmt.checked = false;
	    		}

	    	}
	    </script>
 	</head>
 	<body>
    	<div>
	        <nav class="navbar navbar-default" role="navigation">
	          <div class="container-fluid">
	            <!-- Brand and toggle get grouped for better mobile display -->
	            <div class="navbar-header">
	              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	                <span class="sr-only">Toggle navigation</span>
	                <span class="icon-bar"></span>
	                <span class="icon-bar"></span>
	                <span class="icon-bar"></span>
	              </button>
	              <a id = "FLOCK" class="navbar-brand" href="/#" ><img src="/images/flock0.png" width = "150"></img></a>
	            </div>
	            <!-- Collect the nav links, forms, and other content for toggling -->
	            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	              <ul class="nav navbar-nav" id = "NavItems">
	                <li><a href="/">Home</a></li>
	                <li><a href="/Founders">Founders</a></li>
	                <li><a href = "/Groups">Group Feed</a></li>
	                <li  class="active"><a href = "/Events">Event Feed</a></li>
	                <li><a href = '/{{LinkInOrOut}}' id = "LogInOut">{{InOrOut}}</a></li>
	                <li><a href = "/{{RegisterOrProfile}}">{{RegisterOrProfile}}</a></li>
	              </ul>
	              <form class="navbar-form navbar-left" role="search">
	                <div class="form-group">
	                  <input type="text" class="form-control" placeholder="Search" id = "SearchTop">
	                </div>
	                <button type="submit" class="btn btn-default">Submit</button>
	              </form>
	              <ul class="nav navbar-nav navbar-right" >
	                <li class="dropdown">
	                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown 
	                    <span class="caret"></span>
	                  </a>
	                  <ul class="dropdown-menu" role="menu" id = "rankSubMenu">
	                    <li><a href="/Find">Find Person, Group or Event</a></li>
	                    <li><a href="/Create">Edit Profile, Create Group, or Create Event</a></li>
	                    <li><a href="/">Something else here</a></li>
	                    <li class="divider"></li>
	                    <li><a href="/">Separated link</a></li>
	                  </ul>
	                </li>
	              </ul>
	            </div><!-- /.navbar-collapse -->
	          </div><!-- /.container-fluid -->
	        </nav>
	    </div>
	    <div id = "EVENTS" class = "ContentPane">
	    	{{#events}}
	 		<span class = "event">
	 			<div class = "BIG">
	 				<b class = "TRIG">{{name}}</b> 
	 			</div>
	 			<div>
	 				<b>Location:</b> <span>{{location}}</span>
	 			</div>
	 			<div>
	 				<b>Date:</b> <span>{{date}}</span>
	 			</div>
	 			<div>
	 				<b>Time Start:</b> <span>{{start_time}}</span>
	 			</div>
	 			<div>
	 				<b>Time End:</b> <span>{{end_time}}</span>
	 			</div>
	 			<div>
	 				<b>Max People:</b> <span>{{max_size}}</span>
	 			</div>
	 			<div>
	 				<b>Description:</b> <span>{{description}}</span>
	 			</div>
	 			<div>
	 				<b>Details:</b> <span>{{details}}</span>
	 			</div>
	 			<div>
	 				<b>Keywords:</b> <span>{{tags}}</span>
	 			</div>
	 			<div>
	 				<b>ID:</b> <span>{{event_id}}</span>
	 			</div>
	 			<div>
	 				<b>Groups:</b>
	 				{{#groups}}
	 				<div>
		 				<span>
		 					<b>Name:</b> {{name}} -
		 				</span> 
		 				<span>
		 					<b>Description:</b> {{description}} - 
		 				</span>
		 				<span>
		 					<a href="/Events/{{event_id}}/Groups/{{uuid}}">Link</a>
		 				</span>
		 			</div>
	 				{{/groups}}
	 			</div>
				<div>
 					<form class = "CreateGroup2" action = "/CreateGroup" method = 'post'>
						<input type="checkbox" name = "AddGroup" onclick="changeVisibility(this);">Add Group</input>
						<div class = "HIDE">
							<input type = "hidden" name = "eventid" value = "{{event_id}}"></input>
				 			<label for="GroupName">Group Name:</label>
				 			<input type = "text" name = "GroupName"></input>
				 			<input type = "hidden" name = "EventId" value = "{{event_id}}"></input>
				 			<label for="max_size">What is the maximum size of this group? </label>
				 			<input type = "text" name = "max_size"></input>
				 			<label for = "members"> Member names (Please put commas between them):</label>
				 			<input type = "text" name = "members"></input>
				 			<label for = "description"> Description of Group: </label>
				 			<input type = "text" name = "description" width = "100px" height = "200px"></input>
			 	 			<input type = "submit" class = "btn"></input>
			 	 		</div>
					</form>
 				</div>				
 			</span>	
 			{{/events}}

	 	</div>
	</body>
</html>